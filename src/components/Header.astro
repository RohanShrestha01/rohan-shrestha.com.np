---
import Nav from './Nav.astro';
---

<header
  class="fixed top-0 z-20 flex w-screen items-center justify-between px-5 py-6 transition-all duration-300 ease-in-out xs:px-7 sm:px-10 md:justify-start md:px-7 lg:py-7 xl:px-12"
>
  <div
    id="backdrop"
    class="invisible fixed inset-0 z-30 h-screen w-screen bg-[rgba(0,0,0,0.4)] opacity-0 backdrop-blur-sm transition-all duration-500 md:hidden"
  >
  </div>
  <span class="font-cursive text-2xl md:text-3xl lg:flex-1" id="logo"
    ><a href="/">Rohan Shrestha</a>
  </span>
  <Nav />
  <div class="flex items-center justify-end gap-10 lg:flex-1">
    <span class="hidden lg:inline-block" id="header__resume-btn">
      <a href="/resume.pdf" target="_blank" class="btn-primary inline-block"
        >RESUME</a
      >
    </span>
    <button
      class="relative z-50 flex flex-col gap-1.5 md:hidden"
      id="hamburger-btn"
      aria-label="Open the menu"
    >
      {
        [...Array(3)].map(() => (
          <span class="h-0.5 w-7 rounded-full bg-gray-100 transition-all duration-200" />
        ))
      }
    </button>
  </div>
</header>

<style>
  .active span:first-child {
    transform: translateY(0.5rem) rotate(135deg);
  }
  .active span:nth-child(2) {
    opacity: 0;
  }
  .active span:last-child {
    transform: translateY(-0.5rem) rotate(-135deg);
  }
  .visible {
    visibility: visible;
    opacity: 1;
  }

  .scroll-header {
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    background-color: rgba(47, 49, 64, 0.85);
    padding-top: 1rem;
    padding-bottom: 1rem;
    box-shadow: theme(boxShadow.b);
  }
</style>

<script>
  import '../scripts/header';
  import '../scripts/hamburgerMenu';
</script>
