---
import SocialLinks from './SocialLinks.astro';
import { nav } from '../data/site.json';
---

<nav
  class="flex items-center justify-center absolute top-0 right-0 h-screen w-[75vw] bg-primary-dark invisible opacity-0 translate-x-full transition-all duration-500 z-40 shadow-l sm:w-[60vw] md:z-auto md:transform-none md:transition-none md:visible md:opacity-100 md:bg-transparent md:w-auto md:h-auto md:static md:flex-1 md:shadow-none"
  id="nav"
>
  <ul class="flex flex-col gap-9 md:flex-row md:gap-10">
    {
      nav.map(({ link, name }) => (
        <li class="cursor-pointer text-center">
          <a href={link} class="nav__link py-1 uppercase hover:border-b">
            {name}
          </a>
        </li>
      ))
    }
    <li class="text-center mb-5 md:hidden">
      <a href="/resume.pdf" target="_blank" class="btn-primary">RESUME</a>
    </li>
    <li class="md:hidden"><SocialLinks /></li>
  </ul>
</nav>

<style>
  .active {
    border-bottom: 1px solid theme('textColor.gray.100');
  }

  .visible {
    visibility: visible;
    opacity: 1;
    transform: translateX(0);
  }
</style>

<script>
  import '../scripts/nav';
</script>
